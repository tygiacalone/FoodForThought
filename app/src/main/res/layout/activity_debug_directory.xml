<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.user.foodforthought.DebugDirectoryActivity"
    android:background="#ff00baff">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/button3"
        android:layout_marginStart="47dp"
        android:onClick="goToLoginOnClickListener"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:translationZ="1dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Page"
        android:id="@+id/button4"
        android:onClick="goToMainPageOnClickListener"
        android:layout_alignTop="@+id/button3"
        android:layout_toEndOf="@+id/button5"
        android:translationZ="1dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chat"
        android:id="@+id/button5"
        android:onClick="goToChatOnClickListener"
        android:nestedScrollingEnabled="false"
        android:layout_below="@+id/button3"
        android:layout_toEndOf="@+id/button3"
        android:layout_marginTop="41dp"
        android:translationZ="1dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Checklist:\n 1. PROFILE CREATION:\n - Fill fields in parse user account with LinkedIn data as well as GPS location. Company name, job title, description, picture, etc"
        android:id="@+id/textView"
        android:textSize="12sp"
        android:visibility="visible"
        android:background="#fffeff0f"
        android:layout_below="@+id/button5"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp"
        android:padding="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="2. STACK:\n  - Get stack of profiles showing up. Use GPS data and other data to create stack (This is pretty easy in Parse). Have new profile come up after &quot;Yes&quot; or &quot;No&quot;. Tracking likes and finding mutual likes has already been done."
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:textSize="12sp"
        android:visibility="visible"
        android:background="#fffeff0f"
        android:padding="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="3. CHAT:\n -  Chat is DONE. Need to link list of matches to chatrooms between two users. Currently does not link."
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:textSize="12sp"
        android:visibility="visible"
        android:background="#fffeff0f"
        android:padding="4dp" />
</RelativeLayout>
